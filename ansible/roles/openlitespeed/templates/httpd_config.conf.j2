# Basic OpenLiteSpeed config generated by Ansible
serverName              {{ inventory_hostname }}
user                    nobody
group                   nogroup

errorlog  logs/error.log {
  useServer               1
}

# Listeners
listener Default : 80 {
  address                 *:80
  secure                  0
}

listener SSL : 443 {
  address                 *:443
  secure                  1
  keyFile                 {{ ssl_certificate_key | default('/etc/ssl/private/lsws.key') }}
  certFile                {{ ssl_certificate | default('/etc/ssl/certs/lsws.crt') }}
}

# Virtual Hosts
virtualHost wordpress {
  vhRoot                  {{ wordpress_installs[0].path | default('/var/www/html') }}/
  configFile              conf/vhosts/wordpress/vhconf.conf
}

virtualHostMap Default wordpress
virtualHostMap SSL wordpress
