# Production Environment Variables
# Copy this file to terraform.tfvars and fill in actual values
# NEVER commit terraform.tfvars to git!

# Required - Get from DigitalOcean
do_token = "your-digitalocean-token-here"

# Required - Get from Cloudflare
cloudflare_api_token = "your-cloudflare-api-token-here"
cloudflare_zone_id   = "your-cloudflare-zone-id-here"

# Production Configuration
region       = "sfo2"
droplet_size = "s-4vcpu-8gb"
database_size = "db-s-2vcpu-4gb"

# SSH Configuration
ssh_key_fingerprints = [
  # Add your SSH key fingerprints here
  # Get with: doctl compute ssh-key list
]

ssh_allowed_ips = [
  # Restrict SSH access to specific IPs
  # Example: "203.0.113.0/24"
  "0.0.0.0/0" # WARNING: Allow from anywhere - CHANGE THIS!
]

environment = "production"
